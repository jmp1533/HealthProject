<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<%@taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core" %>
<style type="text/css">
.main{
	height: auto;
	width: 100%;
	background-color: yellow;
}
.profile_1{
	width: 100%;
	height: auto;
}
.profile_1 div{
	height: 30px;
	float: left;
	font-size: 15px;
	padding-left: 2%;
	padding-top: 2%;
}
.title_1{
	width: 18%;
	background-color: #aaa;
}
.title_2{
	width: 48%;
	background-color: #ccc;
}
.date{
	width: 28%;
	background-color: #bbb;
}

.profile_2{
	width: 100%;
	height: auto;
}
.profile_2 div{
	height: 30px;
	float: left;
	font-size: 15px;
	padding-left: 2%;
	padding-top: 2%;
}
.id_1{
	background-color: #aaa;
	width: 18%;
}
.id_2{
	background-color: #ccc;
	width: 28%;
}
.hits_1{
	background-color: #aaa;
	width: 18%;
}
.hits_2{
	background-color: #ccc;
	width: 28%;
}

.view{
	width:1140px;
	height: auto;
}
.view_images{
	width: 800px;
	min-height: 420px;
	height: auto;
	margin: auto;
	background-color: red;
}
.view_images div{
	background-color: #aaa;
	height: auto;
	width: 300px;
	float: left;
	margin: 50px;
}
.view_content{
	height: auto;
	min-height: 400px;
	margin-top: 20px;
	margin-left: 30px;
	margin-right: 30px;
	clear: both;
}
.reple{
	margin-left:30px;
	margin-right:30px;
	height: auto;
	min-height: 200px;
	max-height: 500px;
}
.reple_number{
	width:100%;
	height: 20px;
}
.recommend{
	width:100px;
	height: 100px;
	margin:auto;
	background-image: url("/resources/images/recommend.png");
}
.menu_icon{
	width: 100%;
	height: 20px;
	margin-bottom: 20px;
}

</style>
<script type="text/javascript">
$(document).ready(function(){
	$("a#update").click(function(){
		$("form#update").submit();
	})
	$("a#numer").click(function(){
		var pagenum=$(this).html();
		var r_num=${dto.r_num};
		var path="/client/menu/insert/comunity/border/Review/Reples?pageNum="+pagenum+"&r_num="+r_num
		$("a").css("color","white");
		$(this).css("color","red");
		$.getJSON(path,function(data){
	   
				   var co="<table border='1' width='600' id='table'><tr>"+
				   "<th>글번호</th><th>제목</th><th>내용</th><th>작성일</th></tr>";
		$.each(data,function(i,reple){
			
		 	 co+="<tr><td>"+reple.rre_num+"</td><td>"+reple.id+"</td>"+
           	"<td>"+reple.rre_content+"</td><td>"+reple.rre_date+"</td></tr>"
			});
		co+="</table>";
	   $("#replecot").html(co);
	   
		});
	});
	$("a#next").click(function(){
	
		var pagenum=${pu.endPageNum-1}
		var r_num=${dto.r_num}
		var path="/client/menu/insert/comunity/border/Review/Reples?pageNum="+pagenum+"&r_num="+r_num
		$.getJSON(path,function(data){
			
		    var co="<table border='1' width='600' id='table'><tr>"+
			   "<th>글번호</th><th>제목</th><th>내용</th><th>작성일</th></tr>";
	     $.each(data,function(i,reple){
		
	 	 co+="<tr><td>"+reple.rre_num+"</td><td>"+reple.id+"</td>"+
    	"<td>"+reple.rre_content+"</td><td>"+reple.rre_date+"</td></tr>"
		});
	      co+="</table>";
         $("#replecot").html(co);
		});
	});
	$("a#before").click(function(){
		var pagenum=${pu.endPageNum+1}
		var freenum=${dto.r_num}
		var path="/client/menu/insert/comunity/border/Review/Reples?pageNum="+pagenum+"&freenum="+freenum
		$.getJSON(path,function(data){
			
	    var co="<table border='1' width='600' id='table'><tr>"+
			   "<th>글번호</th><th>제목</th><th>내용</th><th>작성일</th></tr>";
	     $.each(data,function(i,reple){
		
	 	 co+="<tr><td>"+reple.rre_num+"</td><td>"+reple.id+"</td>"+
       	"<td>"+reple.rre_content+"</td><td>"+reple.rre_date+"</td></tr>"
		});
	      co+="</table>";
        $("#replecot").html(co);
		});
	});
	$("#delete").click(function(){
		$("#pop").css("display","block")
		
	});
	$("#cancel").click(function(){
		$("#pop").css("display","none")
		
	});
	$("#dele").click(function(){
	   	
	});
})
</script> 
<body>
<div class="main">
	<div class="content_profile">
		<div class="profile_1">
			<div class="title_1">
				제목
			</div>
			<div class="title_2">
				<input type="hidden" name="r_title" value="${dto.r_title }">${dto.r_title }
			</div>
			<div class="date">
				<input type="hidden" name="r_date" value="${dto.r_date }">${dto.r_date }
			</div>
		</div>
		
		<div class="profile_2">
			<div class="id_1">
				작성자
			</div>
			<div class="id_2">
				<input type="hidden" name="id" value="${dto.id }">${dto.id }
			</div>
			<div class="hits_1">
				조회수
			</div>
			<div class="hits_2">
				<input type="hidden" name="r_hits" value="${dto.r_hits }">${dto.r_hits }
			</div>
		</div>
	</div>
	<div class="view">
		<div class="view_images">
			<div class="before_img">
				<img src="${dto.r_before_img}" id="add_foodimg" style="width: auto;height: auto; max-height: 400px; max-width:300px; ">
			</div>
			<div class="after_img">
				<img src="${dto.r_after_img}" id="add_foodimg" style="width: auto;height: auto; max-height: 400px; max-width:300px; ">
			</div>
		</div>
		<div class="view_content">
			<input type="hidden" name="r_content" value="${dto.r_content }">${dto.r_content }
		</div>
		<div class="recommend">
			<!-- 추천버튼 -->
			<a href="/client/menu/insert/comunity/border/Review/commend?r_num=${dto.r_num }"><input type="button"value="추천하기"></a>
		</div>
		<div class="menu_icon">
			<!-- 삭제수정 버튼 -->
			<c:choose>
				<c:when test="${dto.id == ulogid  }">
					<a id="delete">삭제</a>// <a id="update">수정</a>
				</c:when>
				<c:otherwise>
					<a>삭제// 수정</a>
				</c:otherwise>
			</c:choose>
			<a href="/client/menu/insert/comunity/border/Review/list">메뉴</a>
	
			<!-- 삭제수정 팝업 ajax -->
			<div id="pop" style="  border-color:black; border-width:1px; border-style:solid; display:none;  margin-left:30%; background-color:fuchsia ; height: 100px;width: 150px; position: absolute;" >
			  	정말로 삭제 하시겠습니까<br>
				<a href="/client/menu/insert/comunity/border/Review/delete?r_num=${dto.r_num }"><input type="button" value="삭제" id="dele"></a>
				<input type="button" id="cancel" value="취소">
			</div>
		</div>
	</div>
	
	<div class="reple">
		<div class="reple_view">
			<c:forEach var="reple" items="${reple }">
				<table id="table">
					<tr>
						<td style="width: 80px;">${reple.id }</td>
						<td style="width: 852px;">${reple.rre_content }</td>
						<td style="width: 200px;">${reple.rre_date }</td>
					</tr>
				</table>
			</c:forEach>
		</div>
		
		<div class="reple_number">
			<c:choose>
				<c:when test="${pu.startPageNum>10 }">
					<a  id="before">[이전]</a>
				</c:when>
				<c:otherwise>
					[이전]
				</c:otherwise>
			</c:choose>
			<c:forEach var="i" begin="${pu.startPageNum }" end="${pu.endPageNum }" >
				<c:choose>
					<c:when test="${i==pu.pageNum }">
					<a id="numer" style="color: red;">
						${i }
						</a>
					</c:when>
					<c:otherwise>
						<a id="numer">${i }</a>
					</c:otherwise>
				</c:choose>
			</c:forEach>
			<c:choose>
				<c:when test="${pu.endPageNum<pu.totalPageCount }">
					<a  id="next"> [다음]</a>
				</c:when>
				<c:otherwise>
					[다음]
				</c:otherwise>
			</c:choose>
		</div>
		
		<div class="reple_write">
			<c:choose>
			<c:when test="${not empty id }">
				<form action="/client/menu/insert/comunity/border/Review/Reple" method="post" id="replefom">
					<input type="hidden" value="${dto.r_num}" name="r_num">
					<textarea style="width: 1000px; min-height:30px; max-height: 60px;" name="content"> </textarea>
					<input type="submit" style="width: 30px; height: 30px;" id="repleinsert" value="입력">
				</form> 
			</c:when>
			
			<c:otherwise>
				<input type="text" disabled="disabled" style="width: 1000px; min-height:30px; max-height: 60px;" value="*** 덧글 작성은 로그인을 하셔야 합니다 ***">
				<input type="button" value="입력" style="width: 30px; height: 30px;">
			</c:otherwise>
			
			</c:choose>
		</div>
	</div>
	
	
	
	<%--
	<form action="/client/menu/insert/comunity/border/Review/updateform" id="update" method="post">
	<input type="hidden" name="r_num" value="${dto.r_num}"> 
	<table border="1" >
		<tr>
			<td>글제목</td>
			<td><input type="hidden" name="r_title" value="${dto.r_title }">${dto.r_title }</td>
		</tr>
		<tr>
			<td>작성자</td>
			<td><input type="hidden" name="id" value="${dto.id }">${dto.id }</td>
		</tr>
		<tr>
			<td>작성일</td>
			<td><input type="hidden" name="r_date" value="${dto.r_date }">${dto.r_date }</td>
		</tr>
		<tr>
			<td>조회수</td>
			<td><input type="hidden" name="r_hits" value="${dto.r_hits }">${dto.r_hits }</td>
		</tr>
		<tr>
			<td>Before Img</td>
			<td><img src="${dto.r_before_img}" id="add_foodimg" style="width: auto;height: auto; max-height: 110px; max-width:110px; "></td>
		</tr>
		<tr>
			<td>After Img</td>
			<td><img src="${dto.r_after_img}" id="add_foodimg" style="width: auto;height: auto; max-height: 110px; max-width:110px; "></td>
		</tr>
		<tr>
			<td>내용</td>
			<td><input type="hidden" name="r_content" value='${dto.r_content }'>${dto.r_content }</td>
		</tr>
		<tr>
			<td>추천</td>
			<td><input type="hidden" name="count" value="${dto.count }">${dto.count}</td>
		</tr>
	</table>
	</form>
	 --%>
	<%-- 
	<div id="replecontent">
		<div id="replecot">
		<table border="1"  id="table">
			<tr>
				<th>글번호</th><th>제목</th><th>내용</th><th>작성일</th>
			</tr>
			<c:forEach var="reple" items="${reple }">
				<tr>
					<td>${reple.rre_num }</td>
					<td>${reple.id }</td>
					<td>${reple.rre_content }</td>
					<td>${reple.rre_date }</td>
				</tr>
			</c:forEach>
		</table>
		</div>
		<div>
			
		</div>
	</div>
	<c:if test="${not empty id }">
	<form action="/client/menu/insert/comunity/border/Review/Reple" method="post" id="replefom">
	<input type="hidden" value="${dto.r_num}" name="r_num">
	<textarea rows="4" cols="50" name="content"> </textarea>
	<input type="submit" id="repleinsert" value="입력">
	</form>
	<a href="/client/menu/insert/comunity/border/Review/commend?r_num=${dto.r_num }"><input type="button"value="추천하기"></a> 
	</c:if>
	--%>
	<br>
	다음글
	<c:choose>
		<c:when test="${not empty next.r_num }">
			<a href="/client/menu/insert/comunity/border/Review/view?r_num=${next.r_num }"> ${next.r_title }</a><br/>
		</c:when>
		<c:otherwise>
			최신글입니다.<br/>
		</c:otherwise>
	</c:choose>
	이전글
	<c:choose>
		<c:when test="${not empty prev.r_num }">
			<a href="/client/menu/insert/comunity/border/Review/view?r_num=${prev.r_num }"> ${prev.r_title }</a><br/>
		</c:when>
		<c:otherwise>
			마지막 글입니다.<br/>
		</c:otherwise>
	</c:choose>
</div>
</body>

<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<%@taglib prefix="tiles"  uri="http://tiles.apache.org/tags-tiles"%>
<%@taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core"%>    
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>

<style type="text/css">
.main{
	height: 800px;
}
.menu{
	width: 100%;
	height: 360px;
}
.inner_Box{
	width: 100%;
	height: 440px;
}
.box_1{
	width: 800px;
	height: 220px;
	float: left;
	background-color: red;
}
.box_1 div{
	width: 390px;
	height: 210px;
	float: left;
	margin: 5px;
	background-color: #aaa;
}
.box_2{
	width: 400px;
	height: 440px;
	float: right;
	background-color: blue;
}
.box_2 div{
	margin: 5px;
	width: 390px;
	height: 430px;
	background-color: #bbb;
}
.box_3{
	width: 800px;
	height: 220px;
	float:left;
	background-color: green;
}
.box_3 div{
	width: 390px;
	height: 210px;
	float: left;
	margin: 5px;
	background-color: #ccc;
}
.spone_bar{
	width: 30%;
	height: 100%;
	float: left;
}
.spone_list{
	width: 100%;
	height: 25%;
}
.spone_list:HOVER{
	cursor: pointer;
}

.slide{
	width: 70%;
	height: 100%;
	float:right;
	
}

#img_slide_main{
	position: relative;
}
#img_slide_vUl li{
	position: absolute;
	display: none;
}
#img_slide_vUl li#img_slide_vLi_1{
	display: block;
}

</style>
<script type="text/javascript">
$(document).ready(function(){
	console.log('lll');
	var img_slide_vUl=$('#img_slide_vUl'),
	img_slide_vLi=$('li',img_slide_vUl),
	img_slide_pause=false,
	img_slide_main=$('#img_slide_main'),
	img_slide_cnt=1,
	img_slide_fade_time=1000;
	
	function img_slide_stop_roll(){
		
	}img_slide_main.hover(function(){
		img_slide_pause=true;
	},function(){
		img_slide_pause=false;
	});
	$('.spone_list').click(function(){
		var list_num=$(this).attr('id').split('_');
		img_slide_auto_roll(list_num[1]);
	});
	function img_slide_auto_roll(goNum){
		if(goNum){
			img_slide_vLi.fadeOut(0);
			img_slide_cnt=goNum;
			$('#img_slide_vLi_'+goNum).fadeIn(0);
		}else{
			img_slide_vLi.fadeOut(img_slide_fade_time);
			img_slide_cnt++;
			if(img_slide_cnt==4)img_slide_cnt=1;
			$('#img_slide_vLi_'+img_slide_cnt).fadeIn(img_slide_fade_time);
		};
	}
	setInterval(function(){
		if(!img_slide_pause)img_slide_auto_roll()
	},2500);
});
</script>
</head>

<body>
<c:if test="${not empty sessionScope.ulogid}">
	<input type="hidden" value="${sessionScope.n}" id="num">
</c:if>
<div >
<div class="menu">
		<div class="spone_bar">
			<div class="spone_list" id="list_1">
				광고1
			</div>
			<div class="spone_list" id="list_2">
				광고2
			</div>
			<div class="spone_list" id="list_3">
				광고3
			</div>
			<div class="spone_list" id="list_4">
				광고4(4번그림 아직 없음)
			</div>
		</div>
	<article class="slide" style="padding: 0;">
		<div id="img_slide_main" >
			<ul id="img_slide_vUl">
				<li id="img_slide_vLi_1"><img src="/resources/images/cat1.jpg" width="840px" height="360px" alt='a1'/></li>
				<li id="img_slide_vLi_2"><img src="/resources/images/cat2.jpg" width="840px" height="360px" alt='a2'/></li>
				<li id="img_slide_vLi_3"><img src="/resources/images/cat3.jpg" width="840px" height="360px" alt='a3'/></li>
			</ul>
		</div>
	</article>
</div>
<div class="inner_Box">
	<div class="box_1">
		<div>
			빈페이지
		</div>
		<div>
			피플<a href="/client/menu/people/user/list"><img src="/resources/images/list_icon.png" style="float: right;" /></a>
			<table>
				<c:forEach var="people1" items="${people}">
					<tr>
						<td>${people1.p_title}</td>
					</tr>
				</c:forEach>
			</table>
		</div>
	</div>
	
	<div class="box_2" >
	<div>
		건강정보<a href="/client/menu/information/news/healthsNews"><img src="/resources/images/list_icon.png" style="float: right;" /></a>
		<table>
			<c:forEach var="nav" items="${news}">
				<tr>
					<td>${nav.title}</td>
				</tr>
			</c:forEach>
		</table>
	</div>
	</div>
	<div class="box_3">
		<div>
			팁&노하우 게시판<a href="/client/menu/insert/comunity/border/tip/list"><img src="/resources/images/list_icon.png" style="float: right;" /></a>
			<table border="1">
				<c:forEach var="tip1" items="${tip}">
					<tr>
						<td>${tip1.tip_title}</td>
					</tr>
				</c:forEach>
			</table>
		</div>
		<div>
			자유게시판<a href="/client/menu/insert/comunity/border/free/list"><img src="/resources/images/list_icon.png" style="float: right;" /></a>
			<table border="1">
				<c:forEach var="free1" items="${free}">
					<tr>
						<td>${free1.f_title}</td>
					</tr>
				</c:forEach>
			</table>
		</div>
	</div>
</div>
</div>
</body>
</html>